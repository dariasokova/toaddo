<body>
    <h1>toadally doable</h1>

  <div class="card" id="workList">
    <div class = "cardheader">
      <p>rippit</p>
    </div>
    <div class="tasksField">
    <% if (locals.list1){%>
            <% for (let i = 0; i < list1.length; i++) { %>
                <input type="checkbox" id="item<%= i %>">
                <label for="item <%= i %>"> <%= list1[i] %> </label>
                <br />
            <%} %>
      <% } else { %>
        <h2>waiting for tasks...</h2>
      <% } %>
    </div> 

    <div class="new-task-form">

      <form action="/submit/work" method="POST">
        <input type="text" name="newWorkTask" class='input-field' placeholder="new task">
        <input type="submit" class="submit-button" value="🐸">
      </form>
    </div>  
    </div>

